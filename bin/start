#!/bin/bash

cd /ceph/build
../src/vstart.sh -n -d
./bin/ceph mgr module enable prometheus

sleep 5
./bin/ceph mgr services
echo "Grafana on http://localhost:3000"
echo "Prometheus on http://localhost:9090"

tmux new -d -s frontend 'fe-run'
tmux new -d -s backend 'auto-reloadm'
tmux new -d -s log 'tail -f /ceph/build/out/mgr.?.log'

if [ "$1" = "sleep" ]; then
	sleep infinity
fi
