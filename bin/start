#!/bin/bash

cd /ceph/build
../src/vstart.sh -n -d
./bin/ceph mgr module enable prometheus

sleep 5
./bin/ceph mgr services

echo "Additional services (if started):"
echo "Grafana on http://localhost:3000"
echo "Prometheus on http://localhost:9090"

tmux new -d -s workspace 'fe-run'
tmux new-window -t workspace 'auto-reloadm'
# Replace line below with watch, as the logs seem to be removed on occasions
tmux new-window -t workspace 'tail -f /ceph/build/out/mgr.?.log | grep -i dashboard|traceback'
tmux attach -t workspace
