#!/bin/bash

dashboard_v2_path="/ceph/src/pybind/mgr/dashboard_v2"

while true; do
	inotifywait \
		--exclude '(\.tox|.coverage.*|junit.*|test_tool)' \
		-e modify -e create -e delete -e move \
		-r "$dashboard_v2_path" 
	ceph mgr module disable dashboard_v2 && ceph mgr module enable dashboard_v2
done
